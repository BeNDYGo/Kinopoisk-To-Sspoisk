{
  "manifest_version": 3,
  "name": "Kinopoisk to Sspoisk",
  "version": "1.4",
  "description": "Добавляет кнопку для бесплатного просмотра",
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.kinopoisk.ru/*"],
      "js": ["js/kinopoisk/buttons.js", "js/kinopoisk/kinopoisk.js"]
    },
    {
      "matches": ["*://*.flcksbr.top/*"],
      "js": ["js/sspoisk.js"]
    }
  ]
}